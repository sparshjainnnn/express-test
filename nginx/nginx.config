events {}

http {
  upstream hello_service {
    server hello-service:3000;
  }

  upstream bye_service {
    server bye-service:3001;
  }

  server {
    listen 80;
    server_name api.sipzy.co.in;

    # Base test API path
    location /test-api-sparsh/hello/ {
      proxy_pass http://hello_service/;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
    }

    location /test-api-sparsh/bye/ {
      proxy_pass http://bye_service/;
      proxy_set_header Host $host;
      proxy_set_header X-Real-IP $remote_addr;
    }
  }
}
